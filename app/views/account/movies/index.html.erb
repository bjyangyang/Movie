<div class="col-md-12">

  <h2 class="text-center"> 我加入的评论版 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 片名 </th>
        <th> 简介 </th>
        <th> Critic Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(movie.片名, movie_path(movie)) %> </td>
          <td> <%= render_movie_简介(movie) %> </td>
          <td> <%= movie.critics.count %> </td>
          <td> <%= movie.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
