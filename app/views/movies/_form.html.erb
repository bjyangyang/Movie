<%= form_for @movie do |f| %>

<% if @movie.errors.any? %>
<ul>
  <% @movie.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

片名
<%= f.text_field :片名 %>
<br>
简介
<br>
<%= f.text_area :简介 %>
<br>

<%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>
