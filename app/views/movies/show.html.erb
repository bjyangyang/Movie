<div class="col-md-12">
  <div class="movie">
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@movie) %>
        <label class="label label-success"> movie成员 </label>
        <%= link_to("Quit Movie", quit_movie_path(@movie), method: :critic, class: "btn btn-default") %>
      <% else %>
        <label class="label label-warning"> 不是movie成员 </label>
        <%= link_to("Join Movie", join_movie_path(@movie), method: :critic, class: "btn btn-default") %>
      <% end %>
    </span>
    <%= link_to("写评论", new_movie_critic_path(@movie), class: "btn btn-default pull-right")%>
    <% if current_user && current_user == @movie.user %>
    <%= link_to("Edit", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @movie.片名 %></h2>
  <p><%= @movie.简介 %></p>
    <table class="table">
    <thead>
     <tr>
        <th>评论内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @critics.each do |critic| %>
        <tr>
          <td><%= critic.content %></td>
          <td><%= critic.user.email %></td>
          <td><%= critic.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @critics %>
  </div>

</div>
